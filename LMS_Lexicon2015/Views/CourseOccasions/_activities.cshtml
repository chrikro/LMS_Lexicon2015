            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.StartDate.Day)
            @ViewBag.Line1
            @Html.DisplayFor(modelItem => item.StartDate.Month)
            @ViewBag.Line2
            @Html.DisplayFor(modelItem => item.StartDate.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate.Day)
            @ViewBag.Line1
            @Html.DisplayFor(modelItem => item.EndDate.Month)
            @ViewBag.Line2
            @Html.DisplayFor(modelItem => item.EndDate.Year)
        </td>

        @*<td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.CourseId)
        </td>
        <td>

            @*http://localhost:58422/CourseOccasions/Details/1      GroupId*@
            @*@Html.ActionLink("Ändra", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
            @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })*@

            @Html.ActionLink("Ändra", "Edit/" + item.Id, "Activities") |
            @Html.ActionLink("Detaljer", "Details/" + item.Id, "Activities") |
            @Html.ActionLink("Ta bort", "Delete/" + item.Id, "Activities")
        </td>
    </tr>
}

</table>
