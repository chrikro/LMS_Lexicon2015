@model IEnumerable<LMS_Lexicon2015.Models.Activity>

@{
    ViewBag.Title = "Index";
}
<p>GroupId</p>@ViewBag.groupId
<p>CourseOccasionId</p>@ViewBag.courseOccasionId

<h2>Aktiviteter</h2>
@*http://localhost:58422/CourseOccasions/Details/1        GroupId*@
<p>
     @Html.ActionLink("Lägg till en ny aktiviteter", "Create/" + (int)ViewBag.courseOccasionId + "/" + (int)ViewBag.groupId, "Activities")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
