   var db = new LMS_Lexicon2015.Models.ApplicationDbContext();
}

<div class="row">
    <div class="col-md-12 extratoppadding">

    @if (view == "Group")
    {
        <h2>Dokument för Gruppen</h2>
    }
    else if (view == "Course")
    {
        <h2>Dokument för Kursen</h2>
    }
    else if (view == "Activities")
    {
        <h2>Dokument för Aktiviteten</h2>
        
    }
    else
    {
        <h2>Dokument för ??????</h2>
    }  
