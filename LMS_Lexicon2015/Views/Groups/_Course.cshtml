@model IEnumerable<LMS_Lexicon2015.Models.CourseOccasion>

@{
    ViewBag.Title = "Kurser";
}

<h2>Kurser</h2>

<p>
    @*@Html.ActionLink("Lägg till en ny kurs", "Create/" + Model.First().GroupId, "CourseOccasions")*@

    @if (User.IsInRole("Lärare"))
    {
    @Html.ActionLink("Lägg till en ny kurs", "Create/" + (int)ViewBag.courseOccasionId + "/" + (int)ViewBag.groupId, "CourseOccasions")
    @*@Html.ActionLink("Lägg till en ny aktiviteter", "Create/" + (int)ViewBag.courseOccasionId + "/" + (int)ViewBag.groupId, "Activities")*@
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.GroupId)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate.Day)
            @ViewBag.Line1
            @Html.DisplayFor(modelItem => item.StartDate.Month)
            @ViewBag.Line2
            @Html.DisplayFor(modelItem => item.StartDate.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate.Day)
            @ViewBag.Line1
            @Html.DisplayFor(modelItem => item.EndDate.Month)
            @ViewBag.Line2
            @Html.DisplayFor(modelItem => item.EndDate.Year)
        </td>
        <td>
                @if (User.IsInRole("Lärare"))
                {
                    @Html.ActionLink("Ändra", "Edit/" + item.Id, "CourseOccasions") <span>|</span>
                }
                @Html.ActionLink("Detaljer", "Details/" + item.Id, "CourseOccasions") 
                @if (User.IsInRole("Lärare")) {
                    <span>|</span> }

                @if (User.IsInRole("Lärare"))
                {
            @Html.ActionLink("Ta bort", "Delete/" + item.Id, "CourseOccasions")
                }
                



        </td>
    </tr>
}

</table>
